.post {
  padding: 15rpx 30rpx;
  margin-bottom: 32rpx;
  background-color: #fff;
}

.post__header {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.post__avatar {
  width: 64rpx;
  height: 64rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}

.post__username {
  font-size: 24rpx;
  font-weight: 500;
}

.post__info {
  font-size: 24rpx;
  color: #ccc;
  font-weight: 500;
}

.post__subject {
  font-weight: 900;
}

.post__content {
  color: #999;
  font-size: 30rpx;
  line-height: 1.5;
  font-weight: 500;
}

.post__covers {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.post__cover {
  width: 220rpx;
  height: 220rpx;
  margin-right: 5px;
}